server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;

    server_name _;

    location / {
        try_files $uri $uri/ /index.html =404;
    }
    location /api {
        proxy_pass http://172.16.42.3:80;
        proxy_set_header X-Real-IP $remote_addr;
    }
}